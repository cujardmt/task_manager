<div class="category new">
  <h2>New Category</h2>

  <%= form_for(@category) do |f| %>
    <% # url: tasks_path, method: 'post' %>
    <table summary="Category form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Save Task") %>
    </div>

  <% end %>
</div>
