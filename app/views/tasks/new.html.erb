<h1>Tasks#new</h1>
<p>Find me in app/views/tasks/new.html.erb</p>


<div class="tasks new">
  <h2>Create Task</h2>

<%= form_for(@task) do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Task Name", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :category_id, "Category", class: "form-label" %>
    <%= f.select :category_id, @categories, { prompt: "Select a category" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :priority_id, "Priority", class: "form-label" %>
    <%= f.select :priority_id, @priorities, { prompt: "Select a priority" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :status_id, "Status", class: "form-label" %>
    <%= f.select :status_id, @statuses, { prompt: "Select a status" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Description", class: "form-label" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div>
    <%= f.submit "Create Task", class: "btn btn-primary" %>
  </div>
<% end %>

</div>