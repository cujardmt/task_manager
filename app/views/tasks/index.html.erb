<h1>Tasks#index</h1>


<div class="d-flex justify-content-between">
  <%= current_user.name %>
  <%= button_to('Logout', logout_path, method: :delete, class:'btn btn-link')  %>
</div>

<div class="d-flex flex-row-reverse">
  <%= link_to('New Task', new_task_path(category_id: params[:category_id]))%>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Task Name</th>
      <th scope="col">Description</th>
      <th scope="col">Category</th>
      <th scope="col">Priority</th>
      <th scope="col">Status</th>
      <th scope="col">Due Date</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
        <tr>
            <td>
                <%= link_to(task.name, task_path(id: task.id))  %>
            </td>
            <td>
                <%= task.description  %>
            </td>
            <td>
                <%= task.category.name  %>
            </td>
            <td>
                <%= task.priority.name  %>
            </td>
            <td>
                <%= task.status.name  %>
            </td>
            <td>
                <%= task.due_date  %>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>